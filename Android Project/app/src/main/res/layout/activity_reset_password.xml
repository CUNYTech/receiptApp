<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.next.groupmeal.resetPassword"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/forgotpassword"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/profile" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:text="Please enter the email address associated with your GroupMeal account."
        android:textColor="@color/backgound"
        android:textSize="20sp"
        android:textStyle="bold" />

        <EditText
            android:id="@+id/resetEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/edittextstyle"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/email"
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress"
            android:textColor="@color/green" />

        <Button
            android:id="@+id/Send"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/buttonstyle"
            android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:text="Send E-mail"
            android:layout_margin="30dp"/>
            />
    </LinearLayout>
</LinearLayout>

